#!/bin/env zsh
source ~/.zplug/init.zsh

zplug "robbyrussell/oh-my-zsh", use:"lib/{clipboard,completion,directories,history,termsupport,key-bindings}.zsh"

zplug "themes/agnoster", from:oh-my-zsh
zplug "plugins/git", from:oh-my-zsh
zplug "plugins/git-auto-fetch", from:oh-my-zsh
zplug "plugins/gradle", from:oh-my-zsh
zplug "plugins/helm", from:oh-my-zsh
zplug "plugins/jira", from:oh-my-zsh
zplug "plugins/kubectl", from:oh-my-zsh
zplug "plugins/wd", from:oh-my-zsh


zplug "unixorn/bitbucket-git-helpers.plugin.zsh"
zplug "zdharma/zsh-diff-so-fancy", as:command, use:bin/git-dsf
zplug "DarrinTisdale/zsh-aliases-exa"
zplug "wfxr/forgit"
zplug "zsh-users/zsh-completions"
zplug "2m/zsh-jabba"

if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

zplug load
